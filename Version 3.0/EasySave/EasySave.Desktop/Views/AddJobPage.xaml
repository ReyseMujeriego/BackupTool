<Window x:Class="EasySave.Desktop.Views.AddJobPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySave.Desktop.Utils"
        Title="Add" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:UILanguageManager x:Key="LangManager"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource OutfitThin}"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource OutfitThin}"/>
            <Setter Property="Background" Value="#7FB1AF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
            CornerRadius="10" 
            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ✅ Champs traduits avec `UILanguageManager` -->
        <TextBlock Grid.Row="0" Text="{Binding AddJobName, Source={StaticResource LangManager}}" FontFamily="{StaticResource OutfitThin}" Margin="5"/>
        <TextBox Grid.Row="1" Text="{Binding JobName}" Margin="5"/>

        <TextBlock Grid.Row="2" Text="{Binding AddJobSource, Source={StaticResource LangManager}}" FontFamily="{StaticResource OutfitThin}" Margin="5"/>
        <TextBox Grid.Row="3" Text="{Binding SourcePath}" Margin="5"/>

        <TextBlock Grid.Row="4" Text="{Binding AddJobDestination, Source={StaticResource LangManager}}" FontFamily="{StaticResource OutfitThin}" Margin="5"/>
        <TextBox Grid.Row="5" Text="{Binding DestinationPath}" Margin="5"/>

        <TextBlock Grid.Row="6" Text="{Binding AddJobType, Source={StaticResource LangManager}}" FontFamily="{StaticResource OutfitThin}" Margin="5"/>
        <ComboBox Grid.Row="7" ItemsSource="{Binding SaveTypes}" SelectedItem="{Binding SelectedSaveType}" FontFamily="{StaticResource OutfitThin}" Margin="5"/>

        <Button Grid.Row="8" Content="{Binding AddJobButton, Source={StaticResource LangManager}}" 
                Command="{Binding AddJobCommand}" Margin="10" HorizontalAlignment="Center" Click="SaveButton_Click"/>
    </Grid>
</Window>
