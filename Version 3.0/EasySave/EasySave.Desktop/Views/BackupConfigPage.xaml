<Window x:Class="EasySave.Desktop.Views.BackupConfigPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:EasySave.Desktop.Properties"
        xmlns:local="clr-namespace:EasySave.Desktop.Utils"
        Title="Configuration des sauvegardes" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">


    <Window.Resources>
        <local:UILanguageManager x:Key="LangManager"/>

        <!-- Style des boutons -->
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource OutfitThin}"/>
            <Setter Property="Background" Value="#7FB1AF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Source={StaticResource LangManager}, Path=PriorityExtensionsLabel}" 
               TextAlignment="Center" Margin="0,5"/>
            <TextBox Text="{Binding PriorityExtensions}" Width="350" Margin="0,5" HorizontalAlignment="Center" />

            <TextBlock Text="{Binding Source={StaticResource LangManager}, Path=LargeFileSizeLimitLabel}" 
               TextAlignment="Center" Margin="0,5"/>
            <TextBox Text="{Binding LargeFileSizeLimit}" Width="350" Margin="0,5" HorizontalAlignment="Center"/>

            <TextBlock Text="{Binding Source={StaticResource LangManager}, Path=BusinessSoftwareLabel}" 
               TextAlignment="Center" Margin="0,5"/>
            <TextBox Text="{Binding BusinessSoftware}" Width="350" Margin="0,5" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="{Binding Source={StaticResource LangManager}, Path=SaveButtonLabel}" 
                Command="{Binding SaveCommand}" Width="100" Margin="5"/>
                <Button Content="{Binding Source={StaticResource LangManager}, Path=CancelButtonLabel}" 
                Click="CloseWindow" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
